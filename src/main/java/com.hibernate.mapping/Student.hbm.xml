<hibernate-mapping package="com.example.hibernate">
    <class name="Student" table="students">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name"/>
        <property name="email"/>

        <many-to-one name="university" column="university_id" class="University"/>
        <many-to-one name="branch" column="branch_id" class="Branch"/>

        <set name="courses" table="student_course">
            <key column="student_id"/>
            <many-to-many column="course_id" class="Course"/>
        </set>
    </class>
</hibernate-mapping>
