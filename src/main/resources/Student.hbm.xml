<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hibernate.mapping">
    <class name="com.hibernate.mapping.Student" table="students">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name"/>
        <property name="email"/>

        <many-to-one name="university" column="university_id" class="com.hibernate.mapping.University"/>
        <many-to-one name="branch" column="branch_id" class="com.hibernate.mapping.Branch"/>

        <set name="courses" table="student_course">
            <key column="student_id"/>
            <many-to-many column="course_id" class="Course"/>
        </set>
    </class>
</hibernate-mapping>
